<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01_Xamarim.Forms.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#16F5F1" Padding="24" CornerRadius="0">
            <Label Text="TP01 - Teste" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="login"
               Placeholder="Digite o Login"
               VerticalOptions="Center"/>

        <Entry x:Name="password"
               Placeholder="Digite sua Senha"
               VerticalOptions="Center"
               IsPassword="True"/>


        <Button Text="OK" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        <Button Text="Limpar" HorizontalOptions="Center" Clicked="Button_Clicked_Limpar"/>
        <Button Text="Créditos" HorizontalOptions="Center" Clicked="Button_Clicked_Creditos"/>
    </StackLayout>

</ContentPage>
