<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01_Xamarim.Forms.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="id"
               Placeholder="Digite o ID"
               VerticalOptions="Center"/>

        <Entry x:Name="password"
               Placeholder="Password"
               VerticalOptions="Center"
               IsPassword="True"/>


        <Button Text="OK" HorizontalOptions="Center" Clicked="Button_Clicked"/>
        <Button Text="Limpar" HorizontalOptions="Center" Clicked="Button_Clicked_1"/>
        <Button Text="Créditos" HorizontalOptions="Center" Clicked="Button_Clicked_2"/>
    </StackLayout>

</ContentPage>
